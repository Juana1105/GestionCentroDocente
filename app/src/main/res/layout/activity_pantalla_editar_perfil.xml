<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaEditarPerfil"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/lineaLayoutPantallaEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".PantallaRegistro">


            <TextView
                android:id="@+id/pantallaEditarPerfilTextNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:text="@string/nombreUsuario"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pantallaEditarPerfilEditTextNombre"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/introduceNombre"
                android:textAlignment="center"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"></EditText>

            <TextView
                android:id="@+id/pantallaEditarPerfilTextApellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/apellidosUsuario"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pantallaEditarPerfilEditTextApellidos"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:layout_width="250dp"
                android:backgroundTint="@color/white"
                android:hint="@string/introduceApellidos"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"></EditText>

            <TextView
                android:id="@+id/pantallaEditarPerfilEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/introduceEmail2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pantallaEditarPerfilEditEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/email"
                android:imeOptions="actionSearch"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:textAlignment="center"></EditText>

            <TextView
                android:id="@+id/nombreDNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/introduceDNItext"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="18sp">
            </TextView>
            <EditText
                android:id="@+id/dni"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:hint="@string/introduceDNItext"
                android:inputType="text"
                android:textAlignment="center"
                android:imeOptions="actionSearch"
                android:background="@color/white"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="10dp"
                >
            </EditText>

            <TextView
                android:id="@+id/pantallaEditarPerfilPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/introducePassword"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pantallaEditarPerfilEditPassword"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/textViewPassword"
                android:imeOptions="actionSearch"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textAlignment="center"></EditText>

            <TextView
                android:id="@+id/pantallaEditarPerfilCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/categoriaDocente"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"></TextView>

            <Spinner
                android:id="@+id/SpinnerCategoriaDocente"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:textAlignment="center"></Spinner>

            <TextView
                android:id="@+id/pantallaEditarPerfilTitulacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:text="@string/introduceTitulacion"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pantallaEditarPerfilEditTitulacion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/titulacion"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="7dp"
                android:textAlignment="center"></EditText>

            <TextView
                android:id="@+id/pantallaEditarPerfilTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:text="@string/introduceTelefono"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/pantallaEditarPerfilEditTelefono"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:hint="@string/telefono"
                android:imeOptions="actionSearch"
                android:inputType="number"
                android:padding="7dp"
                android:textAlignment="center"></EditText>



            <Button
                android:id="@+id/editarPerfilBotonGuardarCambios"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/blue_dark"
                android:padding="15dp"
                android:text="@string/editarPerfil">

            </Button>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaGestionGuardias">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/encabezadoGuardias"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_dark"
        app:title="@string/gestionGuardias"
        app:titleCentered="true"
        app:navigationIcon="@drawable/arrow_back"/>

    <LinearLayout
        android:id="@+id/lineaLayoutPantallaGestionGuardias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">


        <TextView
            android:id="@+id/pantallaGfechaGuardia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fechaGuardia"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="18sp">
        </TextView>
        <Button
            android:id="@+id/pantallaEAeligeFechaBoton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_dark"
            android:layout_marginBottom="10dp"
            android:text="@string/eligeFecha">
        </Button>
        <TextView
            android:id="@+id/fechaSeleccionadaPantallaG"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textColor="@color/gray_dark"
            android:textStyle="bold"></TextView>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/pantallaGGreceptorGuardia"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/gray_light"
            android:textColor="@color/black"
            android:text="@string/receptorGuardia"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/pantallaGTeditDiasProrroga"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Persona seleccionada"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/gray_dark"
            >
        </TextView>




        <TextView
            android:id="@+id/pantallaGTtipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tipoGuardia"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp">
        </TextView>

        <Spinner
            android:id="@+id/spinnerTipoGuardia"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_marginBottom="20dp">

        </Spinner>

        <TextView
            android:id="@+id/pantGobservaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pantallaGobservaciones"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:ignore="DuplicateIds">
        </TextView>
        <EditText
            android:id="@+id/pantallaGTlistaPersonas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            >
        </EditText>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonPantallaGguardar"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/blue_dark"
            android:text="@string/enviar"/>



    </LinearLayout>

</LinearLayout>


        <LinearLayout
            android:id="@+id/contenedorGestionarP"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/pantallaGTJEreceptores"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/gray_light"
                android:textColor="@color/black"
                android:text="@string/pantallaGTJEreceptores"
                android:layout_marginTop="15dp"/>


            <TextView
                android:id="@+id/seleccionTareasGT"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Personas seleccionadas..."
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/gray_dark"
                >
            </TextView>


            <TextView
                android:id="@+id/pantallaGTtipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipoTarea"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textSize="18sp">
            </TextView>

            <Spinner
                android:id="@+id/spinnerTipoTarea"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                >

            </Spinner>


            <TextView
                android:id="@+id/pantallaGPcriteriosEspecificos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcionTarea"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"

                android:textSize="18sp">
            </TextView>

            <Spinner
                android:id="@+id/spinnerTareaEspecifica"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                >

            </Spinner>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/observacionesPGTje"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="@string/pantallaGobservaciones"
                app:startIconDrawable="@drawable/edit"
                app:endIconMode="clear_text">

                <EditText
                    android:id="@+id/observacionesJEtareas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonPantallaGestTadjudicar"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:layout_marginTop="60dp"
                android:backgroundTint="@color/blue_dark"
                android:text="@string/adjudicarTarea"/>


        </LinearLayout>




    </LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lineaLayoutPantallaCalendario"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PantallaCalendarioReuniones">

    <TextView
        android:id="@+id/textViewCalendario"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/calendario"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginBottom="40dp">

    </TextView>

    <CalendarView
        android:id="@+id/calendarioPantallaReuniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

    </CalendarView>

    <Button
        android:id="@+id/botonAceptarPantallaCalendario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="@string/volver">

    </Button>

</LinearLayout>
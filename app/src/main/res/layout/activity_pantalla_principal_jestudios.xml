<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutPantallaPrincipalJefeEstudios"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pantallas.PantallaPrincipal">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/encabezadoMenuPrincipal"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@color/blue_dark"
        app:menu="@menu/menu_principal"
        />

    <LinearLayout
        android:id="@+id/linearContenedorSuperior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="start|center">
        <TextView
            android:id="@+id/notificaciones"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="@string/notificaciones"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            >
        </TextView>
        <ImageView
            android:id="@+id/imagenNotificaciones"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:src="@drawable/mail_image"
            android:scaleType="fitCenter">
        </ImageView>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearOpciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/imagenLogoCentro"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/docente"
            android:scaleType="fitCenter"
            android:layout_marginBottom="20dp">
        </ImageView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/ppBotonMirarHorario"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue_dark"
            android:text="@string/mostrarHorario"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/adjudicarTareasAdmin"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue_dark"
            android:text="@string/fijarTareasAdmin"
            android:layout_marginTop="15dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/enviarMensajes"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue_dark"
            android:text="@string/enviarMensajes"
            android:layout_marginTop="15dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fijarReunionesJE"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue_dark"
            android:text="@string/fijarReuniones"
            android:layout_marginTop="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gestionInformeGuardias"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/blue_dark"
            android:text="@string/gestionGuardias"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>



</LinearLayout>
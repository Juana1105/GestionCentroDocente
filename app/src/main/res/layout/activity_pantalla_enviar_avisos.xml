<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PantallaEnviarAvisos">
<!--AVISO ES UNA COSA Q HACE EL COORDINADOR PARA LOS DOCENTES _MENSAJE GRUPAL/INDIVIDUAL-->







        <TextView
            android:id="@+id/pantallaEAreceptores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pantallaEAreceptores"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:ignore="DuplicateIds">
        </TextView>
        <CheckBox
            android:id="@+id/checkBoxEA"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            >
        </CheckBox>





        <TextView
            android:id="@+id/defineTuAviso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defineAviso"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="18sp">
        </TextView>
        <EditText
            android:id="@+id/defineTuAvisoEscrito"
            android:layout_width="300dp"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="2"
            android:scrollbars="vertical"
            android:textAlignment="center"
            android:hint="Ingresa tu aviso aquÃ­">

        </EditText>

        <Button
            android:id="@+id/botonPantallaEAenviarAvisos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_dark"
            android:layout_marginTop="70dp"
            android:text="@string/enviarAvisos"
            >
        </Button>


</LinearLayout>